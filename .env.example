# Service Configuration
APP_NAME=Diligent-Jarvis
DEBUG=True
PORT=5000

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=jarvis-knowledge
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# LLM Configuration
# Download models from HuggingFace (TheBloke/Llama-2-7B-Chat-GGUF)
MODEL_PATH=models/llama-2-7b-chat.gguf
MODEL_TYPE=llama
MAX_TOKENS=1024
TEMPERATURE=0.7
CONTEXT_WINDOW=4096

# RAG Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
TOP_K_RESULTS=4